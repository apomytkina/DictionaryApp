<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.WordFragment">

    <TextView
        android:id="@+id/word_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_title_start_margin"
        android:layout_marginTop="@dimen/card_title_start_margin"
        android:text="@string/word_title"
        android:textSize="@dimen/word_title_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/translation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_title_start_margin"
        android:layout_marginTop="@dimen/card_title_start_margin"
        android:text="@string/word_translation"
        android:textSize="@dimen/word_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word_title_tv" />

    <TextView
        android:id="@+id/example_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_title_start_margin"
        android:layout_marginTop="@dimen/card_title_start_margin"
        android:text="@string/word_usage"
        android:textSize="@dimen/word_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translation_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>